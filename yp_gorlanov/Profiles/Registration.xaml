<Page x:Class="yp_gorlanov.Profiles.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:yp_gorlanov.Profiles"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="Registation" Background="White">

    <Grid>
        <StackPanel Orientation="Vertical" Margin="0,40,0,60" Width="500" Height="520" >
            <TextBlock Text="Регистрация" FontSize="18" FontWeight="Bold" Foreground="DarkSlateGray" 
               HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock Text="Логин" Height="17"  Margin="0,0,0,10"/>
            <TextBox x:Name="Login_Box" Margin="0,0,0,10" />
            <TextBlock Text="Пароль" Height="17" Margin="0,0,0,10" />
            <TextBox Name="Password_Box"  Margin="0,0,0,10" />

            <TextBlock Text="Роль" Margin="0,0,0,10" />
            <ComboBox x:Name="Role_Box" Margin="0,0,0,10" SelectionChanged="Role_Box_SelectionChanged"/>

            <TextBlock Text="Фамилия" Margin="0,0,0,10" />
            <TextBox Name="Surname_Box"  Margin="0,0,0,10"/>
            <TextBlock Text="Имя" Margin="0,0,0,10" />
            <TextBox Name="Name_Box" Margin="0,0,0,10" />
            <TextBlock Text="Отчество" Height="17" Margin="0,0,0,10" />
            <TextBox x:Name="Patronymic_Box"  Margin="0,0,0,10"/>

            <TextBlock Text="Номер студ.билета" Height="17" Margin="0,0,0,10"/>
            <TextBox x:Name="StudentCard_Box"  Margin="0,0,0,10"/>

            <TextBlock Text="Учебная группа" Height="17" Margin="0,0,0,10"/>
            <ComboBox Name="Group_Box" Margin="0,0,0,10" Background="Wheat" BorderBrush="Wheat"/>

            <Button x:Name="Registration_Box" Content="Зарегистрироваться" Height="30" 
                    Margin="0,0,0,10" Background="Wheat" Click="Registration_Box_Click"  FontWeight="Bold"/>
        </StackPanel>
        <Frame Name="RegFrame" />
    </Grid>
</Page>
