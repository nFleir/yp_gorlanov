<Page x:Class="yp_gorlanov.Testing"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:yp_gorlanov"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="testing" Background="White">

    <Grid>
        <StackPanel x:Name="SP_Start" Visibility="Visible">
            <TextBlock Text="Выберите тест" FontSize="48"/>
            <ComboBox Name="TypeOfTest_Box" Margin="0,0,0,10" Height="50"/>
            <Button x:Name="StartTest_Btn" Content="Начать тест" Height="100" FontSize="48" Click="StartTest_Btn_Click" Background="Wheat"/>
            
        </StackPanel>
        
        <StackPanel x:Name="SP_Test" Orientation="Vertical" Margin="200,100,200,100" Visibility="Collapsed">
            <TextBlock x:Name="TypeOfTest_TextBlock" />

            <TextBlock Text="Вопрос №1" FontSize="24" Margin="0,0,0,30"/>
            <TextBlock x:Name="Question1_Box" Width="500" Height="50" HorizontalAlignment="Left" Margin="0,0,0,30"/>

            <RadioButton GroupName="Answers_RBtn" Name="Answer1_Btn" Margin="0,0,0,20" Click="Answer1_Btn_Click"/>
            <RadioButton GroupName="Answers_RBtn" Name="Answer2_Btn" Margin="0,0,0,20" Click="Answer1_Btn_Click"/>
            <RadioButton GroupName="Answers_RBtn" Name="Answer3_Btn" Margin="0,0,0,20" Click="Answer1_Btn_Click"/>
            <RadioButton GroupName="Answers_RBtn" Name="Answer4_Btn" Margin="0,0,0,20" Click="Answer1_Btn_Click"/>

            <Button x:Name="NextQuestion_Btn" Height="50" Background="Wheat" Content="Далее" FontSize="24" Margin="0,0,0,20" Click="NextQuestion_Btn_Click"/>
            <Button x:Name="StopTest_Btn" Height="50" Background="Wheat" Content="Завершить тест" FontSize="24" Click="StopTest_Btn_Click"/>
        </StackPanel>
        
    </Grid>
</Page>
